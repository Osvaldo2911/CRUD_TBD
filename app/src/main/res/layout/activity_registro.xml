<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgc"
    tools:context=".Activity_Registro">

    <TextView
        android:id="@+id/lbl_nbeL"
        android:layout_width="161dp"
        android:layout_height="83dp"
        android:layout_marginStart="312dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/nbe"
        android:rotation="13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_nbeL3"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/nbe"
        android:rotation="6"
        app:layout_constraintEnd_toStartOf="@+id/lbl_logoL2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_nombreRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_ps_contraConfirmarRegistrar"
        android:layout_width="347dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/etfondo"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Confirmar contraseÃ±a"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ps_contraRegistrar" />

    <CheckBox
        android:id="@+id/terminosCondiciones"
        android:layout_width="220dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Terminos y condiciones"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ps_contraConfirmarRegistrar" />

    <EditText
        android:id="@+id/et_ps_contraRegistrar"
        android:layout_width="347dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/etfondo"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="@string/hint_Contra"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_UserRegistro" />

    <EditText
        android:id="@+id/et_NombreFullRegistro"
        android:layout_width="346dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/etfondo"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_logoL2" />

    <TextView
        android:id="@+id/lbl_iniciaSesion"
        android:layout_width="182dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:fontFamily="@font/montserrat"
        android:keyboardNavigationCluster="false"
        android:text="Ya tienes una cuenta?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_registrar" />

    <EditText
        android:id="@+id/et_UserRegistro"
        android:layout_width="346dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/etfondo"
        android:ems="5"
        android:fontFamily="@font/montserrat"
        android:hint="@string/hint_Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_NombreFullRegistro" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:fontFamily="@font/montserrat"
        android:text="Registrar"
        android:textAlignment="center"
        android:textColorHighlight="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminosCondiciones" />

    <TextView
        android:id="@+id/lbl_logoL2"
        android:layout_width="136dp"
        android:layout_height="143dp"
        android:background="@drawable/lgc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_nombreRegistro" />

</androidx.constraintlayout.widget.ConstraintLayout>