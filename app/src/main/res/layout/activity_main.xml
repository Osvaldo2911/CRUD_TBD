<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/bkgCarga"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/bgc"
    android:clickable="true"
    android:onClick="abrirActivities"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl_logoCarga"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:background="@drawable/lgc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/lbl_logoNombre"
        android:layout_width="235dp"
        android:layout_height="72dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/lbl_logoNombre"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_logoCarga"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nbe1"
        android:layout_width="128dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="332dp"
        android:background="@drawable/nbe"
        android:rotation="13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nbe2"
        android:layout_width="138dp"
        android:layout_height="70dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/nbe"
        android:rotation="13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nbe4"
        android:layout_width="126dp"
        android:layout_height="95dp"
        android:layout_marginStart="336dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/nbe"
        android:rotation="13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nbe3"
        android:layout_width="187dp"
        android:layout_height="105dp"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/nbe"
        android:rotation="13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>